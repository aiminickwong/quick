{% extends "master.tmpl" %}
{% block content %}
<form id="action" method="POST" action="">{% csrf_token %}</form>
            <div class="content">
                <div class="page-inner">
                    <div class="page-header">
                        <h4 class="page-title">配置管理</h4>
                        <ul class="breadcrumbs">
                            <li class="nav-home">
                                <a href="/quick">
                                    <i class="flaticon-home"></i>
                                </a>
                            </li>
                            <li class="separator">
                                <i class="flaticon-right-arrow"></i>
                            </li>
                            <li class="nav-item">
                                <a href="#">配置管理</a>
                            </li>
                            <li class="separator">
                                <i class="flaticon-right-arrow"></i>
                            </li>
                            <li class="nav-item">
                                <a href="#">Snippets</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-head-row">
                                        <div class="card-title">
                                        <a class="btn btn-primary" href="/quick/{{ what }}/edit">新建SNIPPET</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="demo">
                                          <div class="table-responsive" id="listitems">
                                          <table class="table table-bordered">
                                            <thead>
                                              <tr>
                                                <th style="width:25px;">序号</th>
                                                <th>文件</th>
                                                <th>操作</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                          {% for snippet,shortname,option in snippets %}
                                              <tr>
                                                <td>{{forloop.counter}}</td>
                                                <td>{{ shortname }}</td>
                                            {% if option %}
                                                <td>
                                              {% ifequal option "editable" %}<span class="btn btn-primary" onClick="window.location='/quick/snippet/edit/file:{{ snippet }}'">编辑</a> {% endifequal %}
                                                </td>
                                            {% endif %}
                                              </tr>
                                          {% endfor %}
                                            </tbody>
                                          </table>
                                          </div>
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
{% endblock content %}



