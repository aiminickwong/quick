    <!-- Sweet Alert -->
    <script src="/quick_content/assets/js/plugin/sweetalert/sweetalert.min.js"></script>
    <script>
        //== Class definition
        var SweetAlertQuick = function() {
            var initQuick = function() {
                $('#import').click(function(e){
                    swal({
                        title: '导入数据',
                        content: {
                            element: "input",
                            attributes: {
                                type: "file",
                                id: "myfile",
                                name:"myfile"
                            },
                        },
                        buttons: {
                            cancel: {
                                visible: true,
                                className: 'btn btn-danger',
                                text : '取消',
                            },                  
                            confirm: {
                                className : 'btn btn-success',
                                text : '上传',
                            }
                        },
                    }).then((value) => {
                        if (value) {
                            console.log(value)
                            var csrfToken = $("[name='csrfmiddlewaretoken']").val();
                            var what = $('#import').data('import-type')
                            console.log(what)
                            var fd = new FormData();
                            fd.append("xlsfile",$("#myfile")[0].files[0])
                            fd.append("what",what)
                            $.ajax({
                              url: "/quick/"+what+"/import",
                              type: "POST",
                              headers: {"X-CSRFToken": csrfToken},
                              contentType: false,
                              processData: false,
                              data: fd,
                              success: function (data,status) {
                                //console.log("数据: \n" + data + "\n状态: " + status);
                                if (data != 'True'){
                                    console.log(data)
                                    $("#uploading").hide()
                                    swal("导入失败!", data, {
                                        icon : "error",
                                        buttons: {                  
                                            confirm: {
                                                className : 'btn btn-danger'
                                            }
                                        },
                                    });
                                }else{
                                    $("#uploading").hide()
                                    swal("恭喜!", "数据已成功导入!", {
                                        icon : "success",
                                        buttons: {                  
                                            confirm: {
                                                className : 'btn btn-success'
                                            }
                                        },
                                    }).then((ok) => {
                                        if (ok) {
                                            location.reload();
                                        } else {
                                            location.reload();
                                        }
                                    });
                                    
                                }
                              }
                            })
                            $("#uploading").show()
                        } else {
                            swal.close();
                        }
                    });
                });
                $('#export').click(function(e){
                    var what = $('#export').data('export-type')
                    console.log(what)
                    var url = "/quick/" + what + "/export";
                    var xhr = new XMLHttpRequest();
                    xhr.open('GET', url, true);//get请求，请求地址，是否异步
                    xhr.responseType = "blob";    // 返回类型blob
                    xhr.onload = function () {// 请求完成处理函数
                        if (this.status === 200) {
                            $("#uploading").hide()
                            var blob = this.response;// 获取返回值
                            var a = document.createElement('a');
                            var mydate = new Date();
                            var savename ="cmdb-" + mydate.getFullYear() + mydate.getMonth() + mydate.getDate() +mydate.getHours() +mydate.getMinutes()+".xls" 
                            a.download = savename;
                            a.href=window.URL.createObjectURL(blob);
                            a.click();
                        }
                    };
                    // 发送ajax请求
                    xhr.send();
                    $("#uploading").show()
                    });
            };
            return {
                //== Init
                init: function() {
                    initQuick();
                },
            };
        }();

        //== Class Initialization
        jQuery(document).ready(function() {
            SweetAlertQuick.init();
        });
    </script>
    <script type="text/javascript">
    window.confirm = function(option)
    {
        var msg = option.msg;
        console.log('msg is '+msg)
        var target = option.target;
        console.log('target is '+target)
        var para = option.para;
        console.log('para is '+para)
        swal({
            title: '警告！不可逆操作',
            text: msg,
            type: 'warning',
            buttons:{
                confirm: {
                    text : '确认',
                    className : 'btn btn-success'
                },
                cancel: {
                    visible: true,
                    text : '取消',
                    className: 'btn btn-danger'
                }
            }
        }).then((Delete) => {
            if (Delete) {
                document.forms[para].action = target;
                document.forms[para].submit();
            } else {
                swal.close();
            }
        });
    }
    </script>
